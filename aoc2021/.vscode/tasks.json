{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run open binary",
            "type": "process",
            "command": "cargo",
            "args": [
                "run",
                "--bin",
                "${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}